<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/create_character"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/character_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/race">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/level">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/experience">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/abilities"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:useDefaultMargins="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strength" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStrength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStrMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="@string/mod"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dexterity" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDexterity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDexMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="@string/mod"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constitution" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConstitution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="@string/mod"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intelligence" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIntelligence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIntMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="@string/mod"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wisdom" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWisdom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWisMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="@string/mod"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charisma" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCharisma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etChaMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="@string/mod"
                android:inputType="number" />
        </GridLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/proficiency_bonus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProficiencyBonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/hit_points"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/max_hp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMaxHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/current_hp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrentHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/armor_class">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etArmorClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/speed">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/initiative">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etInitiative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/saving_throws"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:useDefaultMargins="true">

            <CheckBox
                android:id="@+id/cbStrSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str" />

            <CheckBox
                android:id="@+id/cbDexSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dex" />

            <CheckBox
                android:id="@+id/cbConSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/con" />

            <CheckBox
                android:id="@+id/cbIntSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intelligenceSave" />

            <CheckBox
                android:id="@+id/cbWisSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wis" />

            <CheckBox
                android:id="@+id/cbChaSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cha" />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/skills"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <CheckBox
                android:id="@+id/cbAcrobatics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acrobatics" />

            <CheckBox
                android:id="@+id/cbAnimalHandling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/animal_handling" />

            <CheckBox
                android:id="@+id/cbArcana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arcana" />

            <CheckBox
                android:id="@+id/cbAthletics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/athletics" />

            <CheckBox
                android:id="@+id/cbDeception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deception" />

            <CheckBox
                android:id="@+id/cbHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history" />

            <CheckBox
                android:id="@+id/cbInsight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insight" />

            <CheckBox
                android:id="@+id/cbIntimidation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intimidation" />

            <CheckBox
                android:id="@+id/cbInvestigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/investigation" />

            <CheckBox
                android:id="@+id/cbMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine" />

            <CheckBox
                android:id="@+id/cbNature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nature" />

            <CheckBox
                android:id="@+id/cbPerception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perception" />

            <CheckBox
                android:id="@+id/cbPerformance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/performance" />

            <CheckBox
                android:id="@+id/cbPersuasion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/persuasion" />

            <CheckBox
                android:id="@+id/cbReligion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/religion" />

            <CheckBox
                android:id="@+id/cbSleightOfHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleight_of_hand" />

            <CheckBox
                android:id="@+id/cbStealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stealth" />

            <CheckBox
                android:id="@+id/cbSurvival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survival" />
        </GridLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/equipment_notes">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEquipmentNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>
