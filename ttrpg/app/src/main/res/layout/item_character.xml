<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_character_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Имя -->
    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Character Name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_character"/>

    <!-- Детали (уровень, раса, hp) -->
    <TextView
        android:id="@+id/tv_character_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lv X • Race • HP Y/Z"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_character_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_character"/>

    <!-- Кнопка удалить -->
    <ImageButton
        android:id="@+id/btn_delete_character"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
